{
	"name": "boilerplate-static",
	"version": "2.2.0",
	"description": "",
	"main": "index.js",
	"scripts": {
		"clean": "rimraf dist",
		"build:copy": "npx cpx2 'src/public/**/*' dist",
		"build:js": "vite build",
		"build:js:prod": "vite build --mode production",
		"build:css": "npm run sass-glob && sass src/assets/sass:dist/assets/css --style=expanded",
		"build:css:prod": "npm run sass-glob && sass src/assets/sass:dist/assets/css --style=compressed --no-source-map",
		"build:images": "npx cpx2 'src/assets/images/**/*' dist/assets/images",
		"build:images-webp": "node scripts/images-webp.js",
		"build:images-webp:optimized": "node scripts/images-webp-optimized.js",
		"build:html": "node scripts/build-html.js",
		"build:html:optimized": "node scripts/build-html-optimized.js",
		"sass-glob": "node scripts/sass-glob.js",
		"watch:js": "vite build --watch",
		"watch:css": "chokidar \"src/assets/sass/**/*.scss\" --ignore \"**/_index.scss\" -c \"npm run sass-glob && sass src/assets/sass:dist/assets/css --style=expanded\"",
		"watch:html": "chokidar \"src/assets/html/**/*.njk\" \"src/assets/html/_config/*.json\" -c \"npm run build:html\"",
		"watch:images": "chokidar \"src/assets/images/**/*\" -c \"npm run build:images && npm run build:images-webp\"",
		"watch:copy": "chokidar \"src/public/**/*\" -c \"npm run build:copy\"",
		"watch": "npm-run-all -p watch:*",
		"serve": "browser-sync start --server dist --files 'dist/**/*' --open external",
		"build": "npm-run-all clean -p build:copy build:js build:css build:images build:images-webp build:html",
		"build:prod": "npm-run-all clean -p build:copy build:js:prod build:css:prod build:images build:images-webp build:html",
		"build:optimized": "npm-run-all clean -p build:copy build:js build:css build:images build:images-webp:optimized build:html:optimized",
		"build:prod:optimized": "npm-run-all clean -p build:copy build:js:prod build:css:prod build:images build:images-webp:optimized build:html:optimized",
		"dev": "npm-run-all build -p watch serve",
		"start": "npm run dev"
	},
	"author": "",
	"license": "ISC",
	"devDependencies": {
		"@11ty/eleventy": "^3.1.0",
		"autoprefixer": "^10.4.21",
		"browser-sync": "^3.0.2",
		"chokidar-cli": "^3.0.0",
		"cpx2": "^8.0.0",
		"eslint": "^8.34.0",
		"eslint-config-prettier": "^8.6.0",
		"eslint-config-standard": "^17.0.0",
		"glob": "^11.0.2",
		"jsdom": "^21.1.2",
		"npm-run-all": "^4.1.5",
		"nunjucks": "^3.2.4",
		"postcss": "^8.5.4",
		"postcss-cli": "^11.0.1",
		"prettier": "^2.8.4",
		"promise-polyfill": "^8.2.1",
		"rimraf": "^6.0.1",
		"sass": "^1.55.0",
		"sharp": "^0.33.3",
		"swiper": "^8.4.4",
		"typescript": "^4.8.4",
		"vite": "^6.3.5"
	}
}
