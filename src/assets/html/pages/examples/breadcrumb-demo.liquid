pageTitle: 'Breadcrumb Demo'
pageDescription: 'Demonstrating breadcrumb functionality'
pageKeywords: 'breadcrumb, demo'
breadcrumbs:
  - text: 'Home'
    url: '/'
  - text: 'Examples'
    url: '/examples/'
  - text: 'Breadcrumb Demo'
